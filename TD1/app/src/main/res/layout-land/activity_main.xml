<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:fontFamily="cursive"
        android:text="A Noël c'est moi qui tient les rennes."
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:onClick="onClickBtnPrev"
        android:id="@+id/prevButton"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:text="&lt;"
        android:layout_margin="@dimen/button_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


    <Button
        android:id="@+id/nextButton"
        android:onClick="onClickBtnNext"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:text="&gt;"
        android:layout_margin="@dimen/button_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/productImageView"
        android:scaleType="fitCenter"
        android:layout_width="@dimen/img_view_width"
        android:layout_height="@dimen/img_view_height"
        android:layout_margin="20dp"
        android:onClick="onClickImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/descriptionTextView"
        app:layout_constraintTop_toBottomOf="@+id/prevButton"
        app:layout_constraintBottom_toTopOf="@id/cancelImageButton"
        app:srcCompat="@drawable/img" />

    <Spinner
        android:theme="@style/spinner_style"
        android:id="@+id/sizeSpinner"
        android:entries="@array/taille"
        android:layout_width="140dp"
        android:layout_height="@dimen/spinner_height"
        android:layout_marginLeft="@dimen/spinner_margin_left_landscape"
        app:layout_constraintTop_toBottomOf="@id/nextButton"
        app:layout_constraintLeft_toRightOf="@+id/descriptionTextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/colorSpinner" />

    <Spinner
        android:theme="@style/spinner_style"
        android:id="@+id/colorSpinner"
        android:layout_width="140dp"
        android:layout_height="@dimen/spinner_height"
        android:layout_marginLeft="@dimen/spinner_margin_left_landscape"
        android:entries="@array/coloris"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/descriptionTextView"
        app:layout_constraintTop_toBottomOf="@+id/sizeSpinner"
        app:layout_constraintBottom_toTopOf="@id/cartImageButton"/>

    <ImageButton
        android:id="@+id/cartImageButton"
        android:layout_width="@dimen/img_button_width"
        android:layout_height="@dimen/img_button_height"
        android:layout_marginRight="@dimen/img_button_margin_side"
        android:layout_marginBottom="@dimen/img_button_margin_bottom"
        android:onClick="onClickBtnBasket"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_add_shopping_cart_24" />

    <ImageButton
        android:id="@+id/cancelImageButton"
        android:layout_width="@dimen/img_button_width"
        android:layout_height="@dimen/img_button_height"
        android:layout_marginLeft="@dimen/img_button_margin_side"
        android:layout_marginBottom="@dimen/img_button_margin_bottom"
        app:srcCompat="@drawable/baseline_undo_white_18dp"
        android:onClick="onClickCancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="190sp"
        android:layout_height="0sp"
        android:maxLines="4"
        android:background="@drawable/cadre"
        android:layout_marginTop="40dp"
        android:padding="7dp"
        android:textColor="@color/black"
        android:text="Un pull qui ravira les petits et les grands. Tricoté par d'authentiques grand-mères Australiennes, en laine 100% coton naturel issue d'une filière agriculture durable certifiée ISO-2560."
        app:layout_constraintLeft_toRightOf="@id/productImageView"
        app:layout_constraintRight_toLeftOf="@id/colorSpinner"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

    <TextView
        android:id="@+id/footerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Réalisé en 2020"
        android:background="@color/red_500"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:text="Prix"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/cancelImageButton"
        app:layout_constraintRight_toLeftOf="@id/cartImageButton"
        app:layout_constraintBottom_toTopOf="@id/footerTextView" />

    <View
        android:id="@+id/blankView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="2dp"
        android:visibility="invisible"
        android:background="#000000" />

    <ImageView
        android:id="@+id/expandedImageView"
        android:onClick="onClickImageZoomed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="3dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/img" />

</androidx.constraintlayout.widget.ConstraintLayout>
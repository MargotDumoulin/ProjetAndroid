<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewRennes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A Noël c'est moi qui tient les rennes."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.114" />

    <Button
        android:theme="@style/monstylebouton"
        android:onClick="onClickBtnPrev"
        android:id="@+id/prev_btn"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="&lt;"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


    <Button
        android:theme="@style/monstylebouton"
        android:id="@+id/next_btn"
        android:onClick="onClickBtnNext"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="&gt;"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:scaleType="fitCenter"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:onClick="onClickImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textViewRennes"
        app:srcCompat="@drawable/img" />

    <Spinner
        android:id="@+id/spinner_taille"
        android:entries="@array/taille"
        android:layout_width="200dp"
        android:layout_height="43dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/textViewRennes"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        app:layout_constraintBottom_toTopOf="@+id/spinner_coloris" />

    <Spinner
        android:id="@+id/spinner_coloris"
        android:layout_width="200dp"
        android:layout_height="43dp"
        android:layout_marginLeft="20dp"
        android:entries="@array/coloris"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/spinner_taille" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="40dp"
        android:background="@color/blue_200"
        android:onClick="onClickBtnBasket"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_add_shopping_cart_24" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="250sp"
        android:layout_height="100sp"
        android:background="@color/red_200"
        android:maxLines="5"
        android:layout_marginTop="20dp"
        android:text="Un pull qui ravira les petits et les grands. Tricoté par d'authentiques grand-mères Australiennes, en laine 100% coton naturel issue d'une filière agriculture durable certifiée ISO-2560."
        app:layout_constraintLeft_toLeftOf="@id/imageView"
        app:layout_constraintRight_toLeftOf="@id/spinner_coloris"
        app:layout_constraintTop_toBottomOf="@+id/textViewRennes" />

    <TextView
        android:id="@+id/textViewFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Réalisé en 2020"
        android:background="@color/red_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:text="Prix"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="2dp"
        android:visibility="invisible"
        android:background="#000000" />

    <ImageView
        android:id="@+id/expanded_image"
        android:onClick="onClickImageZoomed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="3dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/img" />

</androidx.constraintlayout.widget.ConstraintLayout>